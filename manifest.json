{
   "manifest_version": 2,
   "name": "Project Activity Checker",
   "description": "Show health status of the projects that are hosted in the public domain near an anchor tag.",
   "version": "0.3.1",

   "icons": {
      "16": "img/pac16.png",
      "48": "img/pac48.png",
      "128": "img/pac128.png"
   },

   "background": {
      "scripts": [
        "lib/underscore-1.6.0.min.js",
        "lib/jquery-2.0.3.min.js", 
        "lib/tracker.js", 
        "utils.js",
        "options.js", 
        "scm.providers.js", 
        "scm.sync.js",
        "background.js"
      ]
   },

   "content_scripts": [
        {
            "run_at": "document_end",
            "js": [ 
                "lib/tracker.js", 
                "lib/underscore-1.6.0.min.js",
                "lib/jquery-2.0.3.min.js",
                "lib/jquery.nano.js",
                "lib/moment-2.7.0.min.js",
                "utils.js", 
                "options.js", 
                "scm.providers.js", 
                "scm.js", 
                "launcher.js"
            ],
            "css": [
                "scm.css"
            ],

            "matches": [
                "<all_urls>"
            ]
        }
    ],

    "browser_action": {
      "name": "Click",
      "default_icon": "img/pac48.png",
      "default_popup": "popup.html"
    },

    "options_page": "options.html",

    "permissions": [ 
        "tabs",
        "unlimitedStorage",
        "<all_urls>"
    ],

    "update_url": "http://clients2.google.com/service/update2/crx",

    "web_accessible_resources" : [
    ],

    "minimum_chrome_version" : "22.0.0.0",

    "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'"
}
